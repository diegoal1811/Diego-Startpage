---
import { config } from "../config";
---

<div
    class="min-h-screen font-mono flex items-center justify-center p-4"
    style={{ color: "var(--theme-fg)" }}
>
    <div
        class="w-full max-w-3xl rounded-2xl shadow-2xl p-8 relative overflow-hidden"
        style={{
            backgroundColor:
                "color-mix(in srgb, var(--theme-bg), transparent calc((1 - var(--terminal-opacity)) * 100%))",
            backdropFilter: "blur(var(--terminal-blur))",
            WebkitBackdropFilter: "blur(var(--terminal-blur))",
            borderColor: "color-mix(in srgb, var(--theme-fg), transparent 90%)",
            borderWidth: "1px",
        }}
    >
        <div class="mt-6 max-h-[75vh] overflow-y-auto custom-scrollbar">
            <slot />
        </div>
    </div>
</div>
