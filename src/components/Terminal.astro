---
import { config } from "../config";
---

<div
    class="min-h-screen font-mono flex items-center justify-center p-4"
    style={{ color: config.theme.colors.foreground }}
>
    <div
        class="w-full max-w-3xl backdrop-blur-lg rounded-2xl shadow-2xl p-8 relative overflow-hidden"
        style={{
            backgroundColor: config.theme.colors.background + "85",
        }}
    >
        <div class="mt-6 max-h-[75vh] overflow-y-auto custom-scrollbar">
            <slot />
        </div>
    </div>
</div>
